{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2017"],
    "module": "commonjs",
    "declaration": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "stripInternal": true,
    "listFiles": true,
    "rootDir": ".",

    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
    
  },
  "files": ["./example/test.ts"],
  "exclude": ["node_modules"]
}